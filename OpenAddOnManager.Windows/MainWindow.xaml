<Window x:Class="OpenAddOnManager.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenAddOnManager.Windows"
        mc:Ignorable="d"

        Height="600"
        Title="Open Add-On Manager"
        Width="800"
        WindowStartupLocation="CenterScreen"

        Closed="ClosedHandler">
    <Grid Margin="8">
        <TabControl ItemsSource="{Binding WorldOfWarcraftInstallation.ClientsForBinding, Mode=OneWay}">
            <TabControl.ContentTemplate>
                <DataTemplate>
                </DataTemplate>
            </TabControl.ContentTemplate>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ReleaseChannelName, Mode=OneWay}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
</Window>
