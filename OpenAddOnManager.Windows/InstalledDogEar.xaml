<UserControl x:Class="OpenAddOnManager.Windows.InstalledDogEar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Viewbox>
        <Canvas Width="300" Height="300">
            <Path Canvas.Left="150" Canvas.Top="150" Width="150" Height="150" Data="M0,150 L150,0 150,150 z" Stretch="Fill" Opacity="0.5">
                <Path.Fill>
                    <RadialGradientBrush GradientOrigin="1,1">
                        <GradientStop Color="LightGreen" Offset="0" />
                        <GradientStop Color="Yellow" Offset="1" />
                    </RadialGradientBrush>
                </Path.Fill>
            </Path>
            <TextBlock Canvas.Left="180" Canvas.Top="275" Text="INSTALLED" FontSize="24" FontWeight="Black" Foreground="Black">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="50" ShadowDepth="0" />
                </TextBlock.Effect>
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="-45" />
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
    </Viewbox>
</UserControl>
